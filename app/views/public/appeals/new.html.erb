<h1><%= t 'new_appeal' %></h1>

<%= semantic_form_for @appeal, :url => public_section_appeals_path(@section.slug), :html => { :multipart => true } do |form| %>
  <%= form.inputs do %>
    <%= form.input :surname %>
    <%= form.input :name %>
    <%= form.input :patronymic %>
    <%= form.input :answer_kind, :as => :radio, :collection => @appeal.class.values_for_select_tag(:answer_kind) %>
    <%= form.input :email %>
  <% end %>

  <%= form.semantic_fields_for :address do |address| %>
    <%= address.inputs :postcode, :region, :district, :township, :street, :house, :building, :flat %>
  <% end %>

  <%= form.inputs do %>
    <%= form.input :phone %>
    <%= form.input :topic, :prompt => '- не выбрано -', :collection => @section.topics %>
    <%= form.input :social_status, :prompt => '- не выбрано -', :collection => Appeal.values_for_select_tag(:social_status), :required => false %>
    <%= form.input :text %>
    <%= form.input :public %>
    <%= content_tag :li, link_to(t("add_upload"), "#", :class => "button icon add", :id => "upload_file_link", :params => params.to_query) %>
    <%= form.input :root_path, :as => :hidden, :input_html => {:id => 'root_path'} %>
  <% end %>

  <div id="el_finder_wrapper">
  </div>

  <%= form.buttons do %>
    <li>
      <%= link_to t('cancel'), :back, :class => 'button cancel' %>
    </li>
    <%= form.commit_button :button_html => {:class => 'button primary'} %>
  <% end %>

<% end %>


