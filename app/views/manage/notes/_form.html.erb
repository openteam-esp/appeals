<%= link_to t('note'), '#', :class => 'button icon approve', :id => 'note' %>
<%= semantic_form_for @appeal.build_note, :url => appeal_note_path(@appeal), :validate => true do |form| %>
  <%= form.inputs :public if @appeal.public %>
  <%= form.buttons do %>
    <%= form.commit_button t('send'), :button_html => { :class => "button note" } %>
  <% end %>
<% end %>
