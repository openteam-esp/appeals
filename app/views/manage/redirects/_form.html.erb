<%= link_to t('redirect'), '#', :class => 'button icon mail', :id => 'redirect' %>
<%= semantic_form_for @appeal.build_redirect, :url => manage_appeal_redirect_path(@appeal), :validate => true do |form| %>
  <%= form.inputs :recipient %>
  <%= form.actions do %>
    <%= form.action :submit, :label => t('send'), :button_html => { :class => "button redirect" } %>
  <% end %>
<% end %>
