<%= link_to t('review'), '#', :class => 'button icon search primary', :id => 'review' %>
<%= semantic_form_for @appeal.build_review, :url => manage_appeal_review_path(@appeal), :validate => true do |form| %>
  <%= form.inputs :recipient %>
  <%= form.actions do %>
    <%= form.action :submit, :label => t('send'), :button_html => { :class => "button review" } %>
  <% end %>
<% end %>
