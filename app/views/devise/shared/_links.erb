<% if controller_name != 'sessions' %>
  <li><%= link_to "Войти в систему", new_session_path(resource_name) %></li>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <li><%= link_to "Забыли пароль?", new_password_path(resource_name) %></li>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <li><%= link_to "Не получили инструкцию подтверждения?", new_confirmation_path(resource_name) %></li>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <li><%= link_to "Не получили инструкцию разблокировки?", new_unlock_path(resource_name) %></li>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <li><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></li>
  <% end %>
<% end %>
